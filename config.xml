<?xml version='1.0' encoding='utf-8'?>
<widget id="email.hollo.app" version="0.1.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hollo</name>
    <description>
        Hollo mobile app.
    </description>
    <author email="dev@hollo.email" href="https://app.hollo.email">
        Vladimir Osipov
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="BackgroundColor" value="0xffffffff" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="StatusBarBackgroundColor" value="#7a4df9" />
    <preference name="EnableWebGL" value="true" />
    <icon src="assets/icon.png" />
    <platform name="android">
        <icon density="ldpi" src="assets/icon.png" />
        <icon density="mdpi" src="assets/icon.png" />
        <icon density="hdpi" src="assets/icon.png" />
        <icon density="xhdpi" src="assets/icon.png" />
        <icon density="xxhdpi" src="assets/icon.png" />
        <icon density="xxxhdpi" src="assets/icon.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
                   <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-60x60@1x.png" width="60" height="60" />
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-60x60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-76x76@1x.png" width="76" height="76" />
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-76x76@2x.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-40x40@1x.png" width="40" height="40" />
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-40x40@2x.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-57x57@1x.png" width="57" height="57" />
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-57x57@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-72x72@1x.png" width="72" height="72" />
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-72x72@2x.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-29x29@1x.png" width="29" height="29" />
              <icon src="assets/ios/AppIcon.appiconset/Icon-App-29x29@2x.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="assets/ios/AppIcon.appiconset/Icon-Small-50x50@1x.png" width="50" height="50" />
              <icon src="assets/ios/AppIcon.appiconset/Icon-Small-50x50@2x.png" width="100" height="100" />
    </platform>
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="calshow://*/*" />
    <engine name="android" spec="~5.0.0" />
</widget>
